# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Stripe Configuration for International Payments
# Get these keys from https://dashboard.stripe.com/apikeys
# For testing, use test keys (pk_test_... and sk_test_...)
# For production, use live keys (pk_live_... and sk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Demo Mode (set to 'true' for demo/testing)
NEXT_PUBLIC_DEMO_MODE=true

# Support Page Feature Flags
NEXT_PUBLIC_SUPPORT_CARD=1

# Mapbox Configuration
# Get your API key from https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Application URL (used for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn-here

# International Payment Settings
# Multi-currency support: BRL, USD, EUR, GBP, CAD, AUD, JPY, CHF, MXN, ARS
# Payment methods auto-selected based on currency/country
# DEFAULT_CURRENCY=BRL (auto-detected from user's location)
# SUPPORTED_COUNTRIES=BR,US,CA,GB,DE,FR,ES,IT,AU,JP,MX,AR,CH